{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}


{% extends 'CECMainBundle::base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="span3">
            {% block left %}
            {% endblock %}
        </div>
        <div class="span6 offset4">
            <div class="row narrow-header">
                {% block narrow_header %}
                    <h3 class="narrow-title">{% block narrow_title %}{% endblock %}</h3>
                {% endblock %}
            </div>
            <div class="row narrow-body">{% block narrow_body %}{{ session_flash() }}{% endblock %}</div>
        </div>
    </div>
{% endblock %}
