                {% if membre.groupe %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Mon tutorat
                            {% if seance_a_venir and seance_a_venir.compteRendus is empty %}
                                <span class="badge badge-warning" style="margin-left: 5px;">1</span>
                            {% endif %}
                            {% if cr_a_rediger is not empty %}
                                <span class="badge badge-important"{{ not seance_a_venir or seance_a_venir.compteRendus is not empty ? ' style="margin-left: 5px;"' }}>{{ cr_a_rediger|length }}</span>
                            {% endif %}
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {% if seance_a_venir %}
                                <li><a href="{{ path('seance', { 'seance': seance_a_venir.id }) }}">
