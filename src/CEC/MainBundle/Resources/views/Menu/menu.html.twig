                            <li><a href="{{ path('cec_activite_activites_rechercher') }}">Liste des activités</a></li>
                            <li><a href="{{ path('cec_activite_compterendus_recents') }}">Consulter les comptes-rendus</a></li>
                            <li><a href="{{ path('cec_activite_activites_creer') }}">Rédiger une nouvelle activité</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_SECTEUR_PROJETS') or is_granted('ROLE_BURO') %}
                            <li class="secteur">Secteur Projets</li>
                            <li><a href="{{ path('toutes_seances') }}">Planning des séances</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_SECTEUR_SORTIES') or is_granted('ROLE_BURO') %}
                            <li class="secteur">Secteur Sorties</li>
                            <li><a href="{{ path('toutes_seances') }}">Planning des séances</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_SECTEUR_EVENEMENTS') or is_granted('ROLE_BURO') %}
                            <li class="secteur">Secteur Événements</li>
                            <li><a href="{{ path('toutes_seances') }}">Planning des séances</a></li>
                        {% if is_granted('ROLE_SECTEUR_FUNDRAISING') or is_granted('ROLE_BURO') %}
                            <li class="secteur">Secteur Fundraising</li>
                            <li><a href="{{ path('cec_secteurfundraising_statistiques_voir') }}">Statistiques de l'association</a></li>
                        {% endif %}
                        {% endif %}
                        {% if is_granted('ROLE_BURO') %}
                            <li class="secteur">Buro</li>
                            <li><a href="{{ path('cec_membre_membres_tous') }}">Gestion des membres</a></li>
                            <li><a href="{{ path('cec_membre_membres_passations') }}">Passation et gestion du buro</a></li>
                        {% endif %}
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Données
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('toutes_seances') }}">Planning des séances</a></li>
                        <li class="divider"></li>
