                                        <span class="badge badge-warning" style="margin-left: 10px;">1</span>
                                    {% endif %}
                                </a></li>
                                {% if seance_a_venir.compteRendus is empty %}
                                    <li><a href="{{ path('cec_activite_activites_rechercher') }}">Choisir une activité</a></li>
                                {% endif %}
                                <li class="divider"></li>
                            {% endif %}
                            <li>
                                <a href="{{ path('groupe', { 'groupe': app.user.groupe.id }) }}">
                                    Mon groupe de tutorat
                                </a>
                            </li>
                            {% for lycee in membre.groupe.lycees %}
                                <li>
                                    <a href="{{ path('lycee', { 'lycee': lycee.id }) }}">
                                        Mon lycée {{ lycee.nom|trim('Lycée') }}
                                    </a>
                                </li>
                            {% endfor %}
                            {% if membre.groupe and cr_a_rediger is not empty %}
                                <li class="divider"></li>
                                <li><a href="{{ path('cec_activite_compterendus_arediger', { 'groupe' : membre.groupe.id }) }}">
                                    Compte-rendus à rédiger
                                    <span class="badge badge-important" style="margin-left: 10px;">{{ cr_a_rediger|length }}</span>
                                </a></li>
                            {% endif %}
                        </ul>
                    </li>
                {% endif %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Mes secteurs
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        {% if is_granted('ROLE_SECTEUR_ACTIVITES_SCIENTIFIQUES') 
