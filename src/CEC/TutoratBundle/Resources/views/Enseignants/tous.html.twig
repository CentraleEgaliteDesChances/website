{% extends 'CECTutoratBundle:Enseignants:base.html.twig' %}


{% block narrow_title %}Enseignants{% endblock %}

{% block narrow_body %}

{{ parent() }}

<table class="table table-bordered table-hover table-striped">
    {% if enseignants|length > 0 %}
        <tbody>
            {% for enseignant in enseignants %}
            <tr>
                <td>
                    <a href="{{ path('enseignant', { 'enseignant': enseignant.id }) }}" {{ enseignant.lycee ? '' : ' class="muted"' }}>
                        <strong>{{ enseignant.prenom }} {{ enseignant.nom }}</strong><br />
                        {% if enseignant.role %}
                            {{ enseignant.role }}
                        {% else %}
                            <span class="muted">Aucune fonction</span>
                        {% endif %}
                        
                        {% if enseignant.lycee %}au lycée {{ enseignant.lycee.nom|trim('Lycée') }} ({{ enseignant.lycee.ville }}){% endif %}
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    {% else %}
        <thead><tr><th class="muted"><h4>Aucun enseignant dans la base de donnée</h4></th></tr></thead>
    {% endif %}
</table>

<a href="{{ path('creer_enseignant') }}" class="btn pull-right">Ajouter un nouvel enseignant</a>

{% endblock %}
