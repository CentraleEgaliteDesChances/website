{% extends 'CECTutoratBundle:Enseignants:base.html.twig' %}


{% block narrow_title %}Enseignants{% endblock %}

{% block narrow_body %}

{{ parent() }}

<table class="table table-bordered table-hover table-striped">
    {% if enseignants|length > 0 %}
        <tbody>
            {% for enseignant in enseignants %}
            <tr>
                <td>
                    <a href="{{ path('enseignant', { 'enseignant': enseignant.id }) }}">
                        <strong>{{ enseignant.prenom }} {{ enseignant.nom }}</strong><br />
                        {{ enseignant.role is not empty ? enseignant.role }}
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    {% else %}
        <thead><tr><th class="muted"><h4>Aucun enseignant dans la base de donnée</h4></th></tr></thead>
    {% endif %}
</table>

<a href="{{ path('creer_enseignant') }}" class="btn pull-right">Créer un nouvel enseignant</a>

{% endblock %}
