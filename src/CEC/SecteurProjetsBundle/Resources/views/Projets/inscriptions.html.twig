{% extends 'CECSecteurProjetsBundle::base.html.twig' %}
	

{% block right %}

{{parent()}}
<h2>Ouverture des inscriptions aux projets </h2>

<form class="form form-horizontal" method="post" action="{{ path('ouverture_inscription') }}"><br/>
	Voulez-vous ouvrir les inscriptions aux projets ?<br/><br/>
	
	{% for projet in projets%}
	<div class="form-group">
		<label for="{{projet.slug}}" class="control-label col-md-3">{{projet.nom}}</label>
	    <div class="btn-group" data-toggle="buttons" id="{{projet.slug}}">
			<label class="btn btn-success" >
			<input type="radio" name="{{projet.slug}}" id="option1" value="true" autocomplete="off" {% if projet.inscriptionsOuvertes %}checked {% endif %}> Oui
			</label>
			<label class="btn btn-danger">
			<input type="radio"  name="{{projet.slug}}" id="option2" value="false" autocomplete="off" {% if not projet.inscriptionsOuvertes %}checked {% endif %}> Non
			</label>
		</div><br/>
	</div>
	{% endfor %}
    <div class="footer-controls">
	<br/>
        <input type="submit" value="Mettre Ã  jour les inscriptions aux projets" class="btn btn-primary" />
        <a href="{{ path('description_projets') }}" class="btn btn-default pull-right">Annuler</a>
    </div>
</form>
{% endblock %}
