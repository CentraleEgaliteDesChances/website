	<b class="caret"></b>
	</a>

		<ul id="cp" class="dropdown-menu" aria-labelledby="lycees" role="menu">
			{% for key, lycee in lycees %}
				<li><a aria-expanded="false" href="#cpb" tabindex="-1" role="tab" id="lycee-tab" data-toggle="tab" aria-controls="{{key}}"> {{lycee.nom }} ({{lycee.ville}})</a></li>
			{% endfor %}
		</ul>
	</li>
    
</ul>

  <!-- Tab panes -->
<div class="tab-content">
  	{% for key, lycee in lycees %}
	    <div role="tabpanel" class="tab-pane active" id="{{key}}">
	    	<p style="font-weight:bold;"> {{lycee.nom}} ({{lycee.ville}}) </p>
			{% for lyceenSortie in lyceensSortie %}
				{% if lyceenSortie.lyceen.lycee == lycee %}
					<p>
						<a class="close pull-right close-red" 
                        	href="{{ path('sortie_supprimer_lyceen', { 'sortie' : lyceenSortie.sortie.id, 'lyceen': lyceenSortie.lyceen.id }) }}">
                            &times;
                   		 </a>
						<a href="{{path('voir_eleve', {'id' : lyceenSortie.lyceen.id} ) }}">{{lyceenSortie.lyceen}}</a>
						{% if lyceenSortie.listeAttente > 0 %}
							<span class="label pull-right">  {{lyceenSortie.listeAttente}} sur liste d'attente </span>
						{% endif %}
					</p>
				{% endif %}
			{% endfor %}
			<br/><br/><br/>
		</div>
    {% endfor %}
</div>

</div>
