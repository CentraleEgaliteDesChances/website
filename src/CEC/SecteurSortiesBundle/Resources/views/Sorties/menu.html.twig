<div class="well">
    <ul class="nav nav-list">
        <li
            {% if request.attributes.get('_route') == 'sorties' %}
                class="active"
            {% endif %}
            >
                <a href="{{ path('sorties') }}" class="sorties">Sorties à venir</a>
        </li>

        <li
            {% if request.attributes.get('_route') == 'anciennes_sorties' %}
                class="active"
            {% endif %}
            >
                <a href="{{ path('anciennes_sorties') }}">Sorties passées</a>
        </li>
    </ul>
</div>

{% if request.attributes.get('_route') == 'sorties' or request.attributes.get('_route') == 'anciennes_sorties' %}
    {% if is_granted('ROLE_SECTEUR_SORTIES') or is_granted('ROLE_BURO') %}
        <a href="{{ path('creer_sortie') }}" class="btn btn-default btn-block">Créer une sortie</a>
    {% endif %}
{% endif %}
